{
  "name": "@marketgoo/ola-emails",
  "description": "Ola design system implemented for emails, using MJML",
  "version": "0.4.8",
  "main": "index.js",
  "bin": {
    "ola-emails": "bin.js"
  },
  "scripts": {
    "start": "nodemon --exec gulp demo",
    "build:demo": "rm -f demo/*.html && gulp demo",
    "prettier": "prettier --single-quote 'src/*.js' bin.js index.js --tab-width 4 --print-width=120 --write"
  },
  "license": "MIT",
  "devDependencies": {
    "gulp": "^4.0.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "mjml": "^4.6.3",
    "yargs-parser": "^20.2.4"
    "body-parser": "^1.20.1",
    "express": "^4.18.2",
    "express-winston": "^4.2.0",
    "node-graceful": "^3.1.0",
    "winston": "^3.8.2",
  },
  "nodemonConfig": {
    "watch": [
      "demo/",
      "src/",
      "tokens.js"
    ],
    "ext": "js,mjml"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marketgoo/Ola-Emails.git"
  }
}
